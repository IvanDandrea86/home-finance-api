{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "firstName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": [
            "string",
            "null"
          ]
        },
        "validationToken": {
          "type": "string"
        },
        "lastLogin": {
          "type": [
            "string",
            "null"
          ],
          "format": "date-time"
        },
        "verificationStatus": {
          "type": "string",
          "default": "NOT_VERIFIED",
          "enum": [
            "NOT_VERIFIED",
            "VERIFIED",
            "PENDING"
          ]
        },
        "permission": {
          "anyOf": [
            {
              "$ref": "#/definitions/Permission"
            },
            {
              "type": "null"
            }
          ]
        }
      }
    },
    "Permission": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "user": {
          "anyOf": [
            {
              "$ref": "#/definitions/User"
            },
            {
              "type": "null"
            }
          ]
        },
        "type": {
          "type": "string",
          "enum": [
            "ADMIN",
            "USER"
          ]
        }
      }
    },
    "Family": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "user": {
      "$ref": "#/definitions/User"
    },
    "permission": {
      "$ref": "#/definitions/Permission"
    },
    "family": {
      "$ref": "#/definitions/Family"
    }
  }
}